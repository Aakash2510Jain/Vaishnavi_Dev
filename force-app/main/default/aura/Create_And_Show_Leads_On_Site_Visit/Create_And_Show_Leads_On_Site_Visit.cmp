                                </lightning:textarea> 
                                <lightning:textarea
                                                    value="{!v.SiteVistRec.Interested_In__c}"
                                                    label="Interested In"
                                                    max-length="300"
                                                    >
                                </lightning:textarea> -->
                                
                                <lightning:layout class="abc" >
                                    <lightning:layoutItem class="e" size="4" padding="around-large">
                                        <div class="slds-align_absolute-left" >
                                            <lightning:input label="Actual Visit Date" aura:id="date"  type="Date" value="{!v.today}"   onchange="{!c.selectdate}"/>
                                        </div>
                                    </lightning:layoutItem>
                                    <lightning:layoutItem class="e" size="4" padding="around-large">
                                        <div class="slds-align_absolute-left">
                                             <lightning:textarea
                                                    value="{!v.SiteVistRec.Site_Visit_Remarks__c}"
                                                    label="Visit Remark"
                                                    max-length="300"
                                                    >
                                </lightning:textarea> </div>
                                    </lightning:layoutItem>
                                    <lightning:layoutItem class="e" size="4" padding="around-large">
                                        <div class="slds-align_absolute-left">
                                           <lightning:textarea
                                                    value="{!v.SiteVistRec.Interested_In__c}"
                                                    label="Interested In"
                                                    max-length="300"
                                                    >
                                </lightning:textarea> </div>
                                    </lightning:layoutItem>
                                </lightning:layout>
                             </div>
                         
                    </div>
                    <footer class="slds-modal__footer">
