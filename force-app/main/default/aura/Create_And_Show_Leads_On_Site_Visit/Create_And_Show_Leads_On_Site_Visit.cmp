<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction"
                access="global" controller="CreateLeadAndShowExistingOnVisiteForm">
    <aura:handler name="init" value="{!this }" action="{!c.doInit }"/> 
    <aura:attribute name="Searchkey" type="String"  />
    <aura:attribute name="LeadRec" type="Lead__c"  />
    <aura:attribute name="SiteVistRec" type="Visit__c" default="{}"/>
    <aura:attribute name="today" type="Date" />
    <aura:attribute name="changeDate" type="Date" />
    <aura:attribute name="visitReclist" type="list"  />
    <!--  <aura:attribute name="NewLeadRec" type="Lead__c" default="{}" />-->
    <aura:attribute name="leadRecId" type="String"  />
    <aura:attribute name="showRecordDetail" type="boolean" default="false"  />
    <aura:attribute name="showNewLeadPage" type="boolean" default="false"  />
    <aura:attribute name="showVisitButton" type="boolean" default="false"  />
    <aura:attribute name="showVisitPage" type="boolean" default="false"  />
    
     <aura:attribute name="showError" type="boolean" default="false"  />
     <aura:attribute name="activeTab" type="String" default="tab1" />
    
    <!--  /////// Dependent Picklist //////// -->
    <aura:attribute name="listControllingValues" type="list" default="[]" description="to store controller field values"/>
    <aura:attribute name="listDependingValues" type="list" default="['--- None ---']" description="to store dependent field values"/>
    <aura:attribute name="listSubDependingValues" type="list" default="['--- None ---']" description="to store dependent field values"/>
    
    <aura:attribute name="depnedentFieldMap" type="map" description="map to store dependent values with controlling value"/>
    <aura:attribute name="subDepnedentFieldMap" type="map" description="map to store sub dependent values with controlling value"/>
    <aura:attribute name="bDisabledDependentFld" type="boolean" default="true"/> 
    <aura:attribute name="bDisabledSubDependentFld" type="boolean" default="true"/> 
    
    
    <aura:attribute name="objDetail" type="Lead__c" default="{'sobjectType' : 'Lead__c'}"/>
    <aura:attribute name="controllingFieldAPI" type="string" default="Lead_Source__c" description="store field API name of Controller field"/>
    <aura:attribute name="dependingFieldAPI" type="string" default="Lead_Sub_Source__c" description="store field API name of dependent field"/>
    <aura:attribute name="subDependingFieldAPI" type="string" default="Lead_Source_Type__c" description="store field API name of sub dependent field"/>
    
    <!--  /////// Search Bar //////// -->
    <lightning:card  >
        <div class="slds-align_absolute-center slds-m-top_small slds-text-heading_large">
            <span>Site Visit Form</span>
        </div>
        
        <lightning:layout  horizontalAlign="center" verticalAlign="end" >
            <lightning:layoutItem class="slds-p-around_xxx-small" size="4" padding="around-large">
                <div class="slds-align_absolute-left"  >
                      <h3> <lightning:input   type="text" value="{!v.Searchkey}" placeholder="Enter Email or Phone"  label ="Enter Email Or Phone"  /></h3></div>
            </lightning:layoutItem>
            <lightning:layoutItem class="slds-p-around_xxx-small" size="4" padding="around-large">
                <div class="slds-align_absolute-left">
                    <lightning:button variant="brand" label="Search" title="Enter Email Or Phone" onclick="{!c.searchLead}"> </lightning:button>   
                    <lightning:button variant="brand" label="Create New Lead" onclick="{!c.CreateLead}">
                    </lightning:button> 
                    <aura:if isTrue="{!v.showVisitButton}">
                        <lightning:button variant="brand" label="Create Visit" onclick="{!c.createvisit}">
                        </lightning:button>   
                    </aura:if>
                </div>
            </lightning:layoutItem> 
        </lightning:layout>
    </lightning:card>
     <!--  /////// Tabset  {!v.selTabId} //////// -->
    <aura:if isTrue="{!v.showRecordDetail}">
    <div aura:id="data-entry">
        <lightning:tabset variant="default" selectedTabId="{!v.activeTab}">
            <lightning:tab label="Details" aura:id="tab1" tabindex="1" id="tab1" title="Details">
                <lightning:card>
            <div class="slds-align_absolute-center slds-m-top_small slds-text-heading_large">
                <span><h2>Existing Lead Record</h2></span>
            </div>
                    
            <lightning:layout class="abc" >
                <lightning:layoutItem class="e" size="6" padding="around-large">
                    <div class="slds-align_absolute-left" >
                        <lightning:input   type="text" value="{!v.LeadRec.Name__c}" label ="Name"  /></div>
                </lightning:layoutItem>
                <lightning:layoutItem class="e" size="6" padding="around-large">
                    <div class="slds-align_absolute-left">
                        <lightning:input   type="text" value="{!v.LeadRec.Email__c}"   label ="Email"/></div>
                </lightning:layoutItem>
                 </lightning:layout>
             <lightning:layout class="abc">
                <lightning:layoutItem class="e" size="6" padding="around-large">
                    <div class="slds-align_absolute-left">
                        <lightning:input   type="text" value="{!v.LeadRec.Phone__c}"  label ="Phone"/></div>
                </lightning:layoutItem>
                 <lightning:layoutItem class="e" size="6" padding="around-large">
                    <div class="slds-align_absolute-left" >
                        <lightning:select name="controllerFld"
                                          value="{!v.LeadRec.Lead_Source__c}"
                                          label="Lead Source"
                                          onchange="{!c.onControllerFieldChange}">
                            <aura:iteration items="{!v.listControllingValues}" var="val">
                                <option value="{!val}">{!val}</option>
                            </aura:iteration>
                        </lightning:select>
                    </div>
                </lightning:layoutItem>
                 </lightning:layout>
            <lightning:layout class="abc">
                <lightning:layoutItem class="e" size="6" padding="around-large">
                    <div class="slds-align_absolute-left">
                        <lightning:select name="dependentFld"
                                          value="{!v.LeadRec.Lead_Sub_Source__c}"
                                          label="Lead Sub Source"
                                          disabled="{!v.bDisabledDependentFld}"
                                          onchange="{!c.onSubControllerFieldChange}">
                            <aura:iteration items="{!v.listDependingValues}" var="val">
                                <option value="{!val}">{!val}</option>
                            </aura:iteration>
                        </lightning:select>
                    </div>
                </lightning:layoutItem>
                <lightning:layoutItem class="e" size="6" padding="around-large">
                    <div class="slds-align_absolute-left">
                        <lightning:select name="subDependentFld"
                                          value="{!v.LeadRec.Lead_Source_Type__c}"
                                          label="Lead Source Type"
                                          disabled="{!v.bDisabledSubDependentFld}">
                            <aura:iteration items="{!v.listSubDependingValues}" var="val">
                                <option value="{!val}">{!val}</option>
                            </aura:iteration>
                        </lightning:select>
                    </div>
                </lightning:layoutItem>
            </lightning:layout>
            <div class="slds-align_absolute-center">
                <lightning:button variant="brand" label="Update" onclick="{!c.UpdateLead}"></lightning:button>
            </div>
        </lightning:card>  
            </lightning:tab>
             <lightning:tab label="Visit" aura:id="tab2" tabindex="2" id="tab2" title="Visit"  >
                 <div class="slds-align_absolute-center" padding="around-large">
                <table class="slds-table slds-table_bordered slds-table_resizable-cols" style="width:100%;" >
                    <thead>
                        <tr  >
                             <th >&nbsp;&nbsp;&nbsp;Visit</th>
                            <th >Actual Visit Date</th>
                             <th>Interested In</th>
                             <!-- Add other columns as needed -->
                        </tr>
                    </thead>
                    <tbody>
                        <aura:iteration items="{!v.visitReclist}" var="visit">
                            <tr>	
                                 <td>{!visit.Name}</td>
                                <td>{!visit.Actual_visit_date__c}</td>
                                <td>{!visit.Interested_In__c}</td>
                                <!-- Add other columns as needed -->
                            </tr>
                        </aura:iteration>
                    </tbody>
                 </table>
                     </div>
            </lightning:tab>  
        </lightning:tabset>
     </div>
    </aura:if>
    
    <!-- ////Show Search Error///// -->
    
    <aura:if isTrue="{!v.showError}">
                  <div aura:id="data-entry">
        <lightning:tabset variant="default" selectedTabId="{!v.activeTab}">
            <lightning:tab label="Details" aura:id="tab1" tabindex="1" id="tab1" title="Details">
             <div class="slds-align_absolute-center slds-m-top_small slds-text-heading_large">
                <span><h2 style="color:red;">No Record Is Available!</h2></span>
            </div>
             </lightning:tab>
             <lightning:tab label="Visit" aura:id="tab2" tabindex="2" id="tab2" title="Visit"  >
                 <div class="slds-align_absolute-center slds-m-top_small slds-text-heading_large">
                <span><h2 style="color:red;">No Record Is Available!</h2></span>
            </div>
             </lightning:tab>  
        </lightning:tabset>
     </div>
  </aura:if>
    
    
