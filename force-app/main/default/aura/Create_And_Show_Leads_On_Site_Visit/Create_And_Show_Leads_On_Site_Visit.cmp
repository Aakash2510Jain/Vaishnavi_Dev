            <div class="slds-align_absolute-center">
                <lightning:button variant="brand" label="Create" onclick="{!c.createNEwLead}"></lightning:button>
            </div>
        </lightning:card>
    </aura:if>
    
    <!--  /////// Visit Popup //////// -->
    <aura:if isTrue="{!v.showVisitPage}">
        
        <lightning:card>
            <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true"
                     class="slds-modal slds-fade-in-open slds-modal_medium" style="background-color:grey;">
                <div class="slds-modal__container">
                    <header class="slds-modal__header">
                        <h2 id="modal-heading-01" class="slds-text-heading_medium">Create New Visit</h2>
                    </header>
                    <div class="slds-modal__content slds-p-around_medium">
                        <div class="slds-grid slds-gutters">
                            <div class="slds-col">
                                <span>
                                    <div></div>
                                </span>
                                <span>
                                    <lightning:layoutItem class="e" size="4" padding="around-large">
                                        <lightning:select aura:id="budgetList" label="Budget" >
                                            <option value="">--None--</option>
                                            <aura:iteration items="{!v.budgetList}" var="budget" indexVar="key">
                                                <option text="{!budget}" value="{!budget}"  />
                                            </aura:iteration>
                                        </lightning:select>
                                    </lightning:layoutItem>
                                    <lightning:layoutItem class="e" size="4" padding="around-large">
                                        <lightning:select aura:id="occupationList" label="Occupation" >
