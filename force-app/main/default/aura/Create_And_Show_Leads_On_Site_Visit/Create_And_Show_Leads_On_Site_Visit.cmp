                                            </aura:iteration>
                                        </lightning:select>
                                    </lightning:layoutItem>
                                    <lightning:layoutItem class="e" size="4" padding="around-large">
                                        <lightning:select aura:id="walkinTypeList" label="Walkin Type" >
                                            <option value="">--None--</option>
                                            <aura:iteration items="{!v.walkinTypeList}" var="walkin" indexVar="key">
                                                <option text="{!walkin}" value="{!walkin}"  />
                                            </aura:iteration>
                                        </lightning:select>
                                    </lightning:layoutItem>  <lightning:layoutItem class="e" size="4" padding="around-large">
                                    <lightning:select aura:id="inventoryList" label="Inventory" >
                                        <option value="">--None--</option>
                                        <aura:iteration items="{!v.inventoryList}" var="inventory" indexVar="key">
                                            <option text="{!inventory}" value="{!inventory}"  />
                                        </aura:iteration>
                                    </lightning:select>
                                    </lightning:layoutItem>
                                </span>
                            </div>
                            <div class="slds-col">
                                <span>
                                    <lightning:layoutItem class="e" size="4" padding="around-large">
                                        <lightning:select aura:id="ownershipList" label="OwnerShip Type" >
                                            <option value="">--None--</option>
                                            <aura:iteration items="{!v.ownershipList}" var="ownership" indexVar="key">
